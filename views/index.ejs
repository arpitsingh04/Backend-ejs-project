<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div class="main w-full min-h-screen bg-zinc-900 w-full h-42 overflow-y-scroll no-scrollbar">
      <div class="form p-10 text-white">
        <form action="/create" method="post">
          <input
            class="block px-5 w-full rounded-md py-2 bg-zinc-700 outline-none"
            type="text"
            placeholder="title"
            name="title"
          />
          <textarea
            class="block mt-2 w-full rounded-md px-5 py-2 bg-zinc-700 outline-none resize-none"
            placeholder="details"
            name="details"
          ></textarea>
          <div class="flex items-center">
            <button
              class="mt-2 bg-blue-600 px-5 py-2 rounded-md"
              type="submit"
              value="create task"
            >
              create task
            </button>
          </div>
        </form>
      </div>
      <div class="tasks flex gap-3 flex-erap p-10 ">
        <% if(files.length>0){ %>

          <% files.forEach(function(val){ %>
            <div class="task  px-3 py-4 bg-zinc-700 rounded-md overflow-hidden">
              <h1 class="text-white text2xl tracking-tighter"> <%= val %> </h1>
              <div class="mt-3flex justify-between w-full items-center">
                <a class="text-blue-500 inline-block" href="/file/<%= val %>">read more</a>
                <a href="/edit/<%=val%>" class="text-yellow-300">edit</a>

              </div>
            
          </div>
          <% }) %>
       <% } else { %>
        <h3 class="text-zinc-600">no task yet</h3>
       <% }%>
       
